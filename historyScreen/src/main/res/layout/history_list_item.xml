<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingHorizontal="@dimen/margin_x_small"
android:orientation="vertical">

<TextView
    android:id="@+id/header_history_textview_recycler_item"
    style="@style/HeaderTextStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    tools:text="Header" />

<TextView
    android:id="@+id/description_history_textview_recycler_item"
    style="@style/BaseTextStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_x_small"
    tools:text="Description" />

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/hairline"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/color_demarcation_line" />

</LinearLayout>
